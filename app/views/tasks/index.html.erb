<h1>Here are all your tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
      <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_delete_path(task), method: :delete %>
    </li>
  <% end  %>
</ul>

<p id="add_task"><%= link_to '<i class="fas fa-plus"> Add a task</i>'.html_safe, tasks_new_path %></p>
